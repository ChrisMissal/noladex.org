<html>
  <head>
    <title>Noladex</title>
    <link rel="stylesheet" href="/style.css" type="text/css" media="screen" charset="utf-8">
  </head>
  <body>
    <% if session?%>
      <a id="logout" href="/logout">Logout</a>
    <% end %>
    <% if flash[:notice]%>
      <div class="flash notice">
        <%=flash[:notice]%>
      </div>
    <% end %>
    <% if flash[:success]%>
      <div class="flash success">
        <%=flash[:success]%>
      </div>
    <% end %>
    <% if flash[:error]%>
      <div class="flash error">
        <%=flash[:error]%>
      </div>
    <% end %>
    <%== yield %>
  </body>
</html>
